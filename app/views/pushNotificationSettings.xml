<Alloy>
	<Window  backButtonTitle="" class="container" id="notification"  navTintColor="#CE1D1C">
		 <LeftNavButton>
	        <View left="0">
	         	<Button left='0' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <View bottom='0' class="hr"></View>
		<View id="main" layout="vertical" height="95%">
			<View class="line" top="50" />
			<View id="notificationSlider" height="40" backgroundColor="#ffffff">
				<Label text="Push Notification" textAlign="left" left="10" />
				<Switch id="notiSwitch" right="5" value="true" onChange="changeStatus"/>
			</View>
			<View class="line" />
	       <Label class="contentInfo">Switch off push notification will miss the notification/alert of great deal like Mega Sales and Limited time Sales!</Label>
	       <Label class="label" top="5">Recommendation : ON</Label>
	    	
		</View>
		
	</Window>
</Alloy>