<Alloy>
	<Window title="REGISTER" class="container" backButtonTitle="" fullscreen="true" navBarHidden="true" id="register" barColor="#ED1C24" navTintColor="#FFFFFF">
		<View layout="vertical" class="popupView">
			<View layout="horizontal" height="40" width="15%" right="0">
		 		<Button id="button" class="closeBtn" onClick="closeWindow" />
			</View>
			<View height="auto">
			 	<View id="main" layout="vertical" height="95%">
					<ScrollView layout="vertical" showVerticalScrollIndicator="true" id="registerScrollView" showHorizontalScrollIndicator="true" height="320" width="100%">
						<ImageView  width='Ti.UI.FILL' image="/images/logo.png" id="loginLogo" width="80" />
						<TextField backgroundColor="white" class="textfield" id="username" hintText="Enter Username for login SalesAd" />
						<TextField backgroundColor="white" class="textfield" id="fullname" hintText="Enter Fullname" />
						<TextField backgroundColor="white" class="textfield" id="email" hintText="Enter Email" />
						<TextField backgroundColor="white" class="password" id="password" hintText="Enter Password" />
						<TextField backgroundColor="white" class="password" id="confirm_password" hintText="Enter Confirm Password" />
					</ScrollView>
					<Button id="registerButton" onTouchend="goSignUp" borderRadius="3" backgroundColor="#ffffff" title="Create Account"  width="90%" top="10" height="40" color="#807C7C" />
		            
				</View>
				<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" top="0" opacity="0" backgroundColor="#2E2E2E" >
			        <ActivityIndicator  id="activityIndicator" />
			    	<Label top="5" text="Registering" color="#ffffff" />
			    </View>
			</View>
			<View id="footer" >
				 <Label class="ftText" left="5">SalesAd</Label>
				 <Label class="ftText" left="45">|</Label>
				 <Label class="ftText" left="50">Privacy & Terms</Label>
				 <Label class="ftText" left="130">|</Label>
				 <Label class="ftText" left="135">Help</Label>
				 <Label class="ftText" right="5" textAlign="right" >&#169; freejini</Label>
			</View>
		</View>
			
	</Window>
	
</Alloy>