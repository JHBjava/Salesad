<Alloy>
	<Window title="Add New SalesXpress" backButtonTitle="" id="win" navTintColor="#ED1C24">
		<LeftNavButton>
	        <View id="btnBack" left="0"  width="30" height="45">
	         	<Button left='0' width="25" height="25" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <View class="wfill hfill vert">
	        <View layout="horizontal" height="50" width="100%" platform="android" backgroundColor="#FFFFF6">
				<View left="0" width="10%">
			         	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
			    </View>
		     	<View id="pageTitle" width="70%">
		     		<Label color="#ED1C24" id="title">Add New SalesXpress</Label>
		     	</View>
		 	</View>
		 	<View bottom='0' class="hr"></View>
		 	<ScrollView id="inner_box" bottom="40" class="wfill hfill conthsize contwfill vert">
		 		<ImageView id="photoLoad" image="/images/icon_my-profile.png" onClick="popCamera" form_type="image" width="80" height="80" value="0"></ImageView>
		 		<TextArea hintText="Sales Description" form_type="textarea" require="true" id="title"></TextArea>
		 		<View class="textfield" master="1" form_type="date_picker" require="true" id="sales_from" onClick="popDatePicker">
		 			<Label class="wsize hsize padding" color="#cccccc">Sale Start Date</Label>
		 		</View>
		 		<View class="textfield" master="1" form_type="date_picker" require="true" id="sales_to" onClick="popDatePicker">
		 			<Label class="wsize hsize padding" color="#cccccc">Sale End Date</Label>
		 		</View>
		 		<View class="textfield" master="1" form_type="text" require="true" id="category" model="category" submitColumn="id" optionColumn="categoryName" onClick="popDialogOption">
		 			<Label class="wsize hsize padding" color="#cccccc">Sale Category</Label>
		 		</View>
		 		<View class="textfield" master="1" form_type="text" require="true" id="location" onClick="popMap">
		 			<Label class="wsize hsize padding" color="#cccccc">Map Location</Label>
		 		</View>
		 		<TextArea hintText="Store Name / Address" form_type="textarea" require="true" id="address"></TextArea>
		 		
		 		<Button class="button" onClick="doSubmit" width="90%">Submit</Button>
		 	</ScrollView>
	 	</View>
	</Window>
</Alloy>