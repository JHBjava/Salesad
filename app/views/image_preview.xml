	<Window title="Preview" backButtonTitle="" id="win" navTintColor="#ED1C24">
		<LeftNavButton>
	        <View id="btnBack" left="0"  width="30" height="45" onClick="closeWindow">
	         	<Button left='0' width="25" height="25" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <View class="wfill hfill vert">
	        <View layout="horizontal" height="50" width="100%" platform="android" backgroundColor="#FFFFF6">
				<View left="0" width="10%">
			         	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
			    </View>
		     	<View id="pageTitle" width="70%">
		     		<Label color="#ED1C24" id="title">Preview</Label>
		     	</View>
